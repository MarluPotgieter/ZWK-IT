unit Aktw5_Nr1_Bl193_Validate_Cellphon_Numbers_u;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls;

type
  TfrmValidateCellphoneNumbers = class(TForm)
    lblInfo: TLabel;
    lblCell: TLabel;
    lblFather: TLabel;
    lblMother: TLabel;
    edtStudent: TEdit;
    edtFather: TEdit;
    edtMother: TEdit;
    btnTest: TButton;
    redOut: TRichEdit;
    procedure btnTestClick(Sender: TObject);
  private
    Function IsValidCell(sCell:string):Boolean;
  public
    { Public declarations }
  end;

var
  frmValidateCellphoneNumbers: TfrmValidateCellphoneNumbers;

implementation

{$R *.dfm}

{ TfrmValidateCellphoneNumbers }

procedure TfrmValidateCellphoneNumbers.btnTestClick(Sender: TObject);
var bIsCellValid, bIsMCellValid, bIsFCellValid : Boolean;
begin
  redOut.Clear;
  bIsCellValid := IsValidCell(edtStudent.Text);
  bIsFCellValid := IsValidCell(edtFather.Text);
  bIsMCellValid := IsValidCell(edtMother.Text);

  if NOT bIsCellValid
  then redOut.Lines.Add('The student''s cell phone number is invalid');
  if NOT bFIsCellValid
  then redOut.Lines.Add('The father''s cell phone number is invalid');
  if NOT bMIsCellValid
  then redOut.Lines.Add('The mother''s cell phone number is invalid');

  if bIsCellValid and bIsFCellValid and bIsMCellValid
  then redOut.Lines.Add('All three cell phone numbers are valid');

end;

function TfrmValidateCellphoneNumbers.IsValidCell(sCell: string): Boolean;
begin
  Result := (Length(sCell) = 10) and (sCell[1] = '0');
end;

end.
