unit Aktw7_Nr6_Bl46_SteneGewig_u;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TfrmStene = class(TForm)
    ledEenSteen: TLabeledEdit;
    ledLaaiGewig: TLabeledEdit;
    pnlAfvoer: TPanel;
    btnVerwerk: TButton;
    procedure btnVerwerkClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmStene: TfrmStene;

implementation

{$R *.dfm}

procedure TfrmStene.btnVerwerkClick(Sender: TObject);
var rSteen, rVoertuig, rTot, r5Pers, rTot_Veilig : Real;
    iAant : Integer;
begin
  {Toevoer}
  rSteen := StrToFloat(ledEenSteen.Text);      //Gewig per steen (in kg)
  rVoertuig := StrToFloat(ledLaaiGewig.Text);  //Gewig per steen (in Ton)

  {Verwerking}
  rTot := Trunc((rVoertuig*1000)/rSteen);
  r5Pers := rTot*0.05;

  {Afvoer}
  pnlAfvoer.Caption := FloatToStr(rTot) +#13
                       + FloatToStr(r5Pers);

end;

end.
