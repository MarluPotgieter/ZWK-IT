unit While_Lus_Vb_u;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ComCtrls, ExtCtrls;

type
  TfrmWhile = class(TForm)
    redAfvoer: TRichEdit;
    btnVerwerk: TButton;
    ledNaam: TLabeledEdit;
    procedure btnVerwerkClick(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    cAntw : Char;
  public
    { Public declarations }
  end;

var
  frmWhile: TfrmWhile;

implementation

{$R *.dfm}

procedure TfrmWhile.btnVerwerkClick(Sender: TObject);
var   sNaam : string;
begin
  while (cAntw = 'J') do  {T}    //As Voorwaarde is WAAR voer lus uit
    begin
      sNaam := ledNaam.Text;
      redAfvoer.Lines.Add('Die Naam is : ' + #9 + sNaam);
                          {C}    //Verander beheerveranderlike BINNE DIE LUS, sodat die Voorwaarde ONWAAR WORD en die lus stop
      cAntw := InputBox('Wil jy ''n naam inlees?','Tik <J/N>','J')[1];  //1ste Karakter in InputBox
    end;
end;

procedure TfrmWhile.FormActivate(Sender: TObject);
begin
   cAntw := InputBox('Wil jy ''n naam inlees?','Tik <J/N>','J')[1];  //1ste Karakter in InputBox
                          {I}    //Inisialiseer die beheer-veranderlike
end;

end.

