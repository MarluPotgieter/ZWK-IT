unit Vraag2_u;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ComCtrls;

 const SlaapGeld = 1500; Loon = 125; OortydFaktor = 1.5;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    edtAfstand: TEdit;
    Label2: TLabel;
    edtSpoed: TEdit;
    redVertoon: TRichEdit;
    btnBereken: TButton;
    procedure btnBerekenClick(Sender: TObject);
  private

   var rAfstand, rSpoed, rTyd : Real;

  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnBerekenClick(Sender: TObject);

begin
 redVertoon.Lines.Add(IntToStr(SlaapGeld));
 redVertoon.Lines.Add(IntToStr(Loon));
 redVertoon.Lines.Add(FloatToStr(OortydFaktor));

end;

end.
